                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_font_high"
                android:textSize="@dimen/dimens_sp_14" />
        </LinearLayout>

        <View style="@style/vertical_view" />

        <LinearLayout
            android:id="@+id/ll_ifbct_ppt"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_file_ppt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_size_4"
                android:gravity="center"
                android:text="@string/file_ppt_title_str"
                android:textColor="@color/color_font_high"
                android:textSize="@dimen/dimens_sp_14" />

            <TextView
                android:id="@+id/tv_ifbct_ppt_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_size_4"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/color_font_high"
                android:textSize="@dimen/dimens_sp_14" />
        </LinearLayout>
    </TableRow>

    <View style="@style/horizontal_view" />

    <TableRow
        android:id="@+id/tr_ifbct_3"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_ifbct_word"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_file_word" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_size_4"
                android:gravity="center"
