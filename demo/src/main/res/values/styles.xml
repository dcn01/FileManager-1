<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--导航栏底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!--各控件选中的颜色-->
        <item name="colorAccent">@color/colorPrimary</item>
        <!--各控件默认的颜色-->
        <item name="colorControlNormal">@color/color_white</item>

        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@android:color/black</item>

        <!--Activity窗口的颜色-->
        <item name="android:windowBackground">@android:color/white</item>

        <item name="searchViewStyle">@style/Widget.SearchView</item>

        <!--设置标题栏上按钮颜色-->
        <item name="android:textColorSecondary">@color/color_white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextAppearance">@style/BaseActionBar.MenuTextStyle</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="android:windowAnimationStyle">@style/BaseAnimation</item>
    </style>

    <style name="Widget.SearchView" parent="Widget.AppCompat.SearchView">
        <!--修改搜索框提示文字-->
        <item name="defaultQueryHint">搜索文件</item>
        <!--修改打开搜索框的搜索按钮的图标-->
        <item name="searchIcon">@null</item>
        <!--修改搜索框左边的搜索按钮图标-->
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="BaseActionBar.MenuTextStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseAnimation">
        <!--第一次创建新Activity是调用的动画-->
        <item name="android:activityOpenEnterAnimation">@anim/home_fade_in</item>
        <!--调用finish关闭该Activity是调用的动画-->
        <item name="android:activityCloseExitAnimation">@anim/home_fade_out</item>
        <!--activity还没有finish()下退出效果 -->
        <item name="android:activityOpenExitAnimation">@anim/home_fade_out</item>
        <!--上一个activity返回进入效果  -->
        <item name="android:activityCloseEnterAnimation">@anim/home_fade_in</item>
    </style>

    <!--溢出菜单样式 -->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <!-- <item name="overlapAnchor">false</item>-->
        <!-- <item name="android:dropDownWidth">wrap_content</item>-->
        <!--<item name="android:paddingRight">5dp</item>-->
        <!--<item name="android:popupBackground">?attr/colorPrimary</item>-->
        <item name="android:dropDownVerticalOffset">46dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>
</resources>
